
@using BackendAPI
@using Sharpy
@using BackendAPI.Objects
@using BackendProxy
@using BackendAPI.Events
@using System.Diagnostics
@using Microsoft.AspNetCore.Components
@using Microsoft.JSInterop
@using System.Globalization
@page "/"
@namespace BlazorServerSample.Pages


    <h3>ButtonMatriz</h3>

  
    <style>
        div {
            border: 1px solid blue;
            text-align: center;
        }

        #matrix {
            border: 1px solid red;
            margin: 0 auto;
            padding: 5px;
        }

            #matrix tr, td {
                padding: 5px;
            }

            #matrix button {
                height: 80px;
                width: 150px;
                border: none;
                font-family: helvetica;
                font-weight: bold;
            }

        #b1, #b3 {
            background-color: rgba(255, 153, 51, 0.5);
        }

            #b1:hover, #b3:hover {
                background-color: rgb(255, 153, 51);
            }

        #b2 {
            background-color: rgba(15, 138, 15, 0.5);
        }

            #b2:hover {
                background-color: rgb(15, 138, 15);
            }


        #b4 {
            background-color: rgba(189, 15, 15, 0.6);
        }

            #b4:hover {
                background-color: rgb(189, 15, 15);
            }
    </style>



    <div>
        <table id="matrix">
            @{
                int num = 0;

            }


            @for (int i = 0; i < Initilizator.ActualProfile.Matriz.Lin; i++)
            {

            <tr>
                @for (int ic = 0; ic < Initilizator.ActualProfile.Matriz.Column; ic++)
                {

                    <td>
                        <div id="b1">
                            <button runat="server" id="@num" value="@num" type="button" onclick="sendAjaxRequest($(this), '/api/ButtonClick', 1)">
                                <span>@num</span>
                            </button>
                        </div>
                    </td>
                



                    num++;

                }
            </tr>

            }



        </table>
        <h3>Definição:</h3>

        <div id="definicaoArquitetura">

        </div>

        <input id="btnProximaDefinicao"
               type="button"
               value="Próxima Definição"
               onclick="atualizarDefinicao();" />
    </div>
